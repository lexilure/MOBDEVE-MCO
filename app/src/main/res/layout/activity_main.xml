<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Banner Image -->
    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="App Banner"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        android:layout_alignParentTop="true" />

    <!-- Services Section Title -->
    <TextView
        android:id="@+id/servicesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@id/bannerImage"
        android:layout_centerHorizontal="true" />

    <!-- Services Grid -->
    <GridLayout
        android:id="@+id/servicesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:layout_below="@id/servicesTitle"
        android:layout_centerHorizontal="true">

        <!-- Individual Service Item (Grooming) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Grooming" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grooming" />
        </LinearLayout>

        <!-- Individual Service Item (Veterinary) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Veterinary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Veterinary" />
        </LinearLayout>

        <!-- Individual Service Item (Pet Walking) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Pet Walking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pet Walking" />
        </LinearLayout>
    </GridLayout>

    <!-- Pets Section Title -->
    <TextView
        android:id="@+id/petsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Pets"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@id/servicesGrid"
        android:layout_centerHorizontal="true" />

    <!-- Pets RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/petsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/petsTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
