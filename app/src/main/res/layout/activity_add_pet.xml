<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/addPetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Add Your Pet"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Pet Name -->
    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/etPetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pet Name" />

    <!-- Species -->
    <EditText
        android:id="@+id/etSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Species" />

    <!-- Location -->
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location" />

    <!-- Temperature Range (Optional) -->
    <EditText
        android:id="@+id/etTempRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Temperature Range (Optional)" />

    <!-- Humidity Range (Optional) -->
    <EditText
        android:id="@+id/etHumidityRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Humidity Range (Optional)" />

    <!-- Save Button -->
    <Button
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Pet"
        android:backgroundTint="@color/buttonBackground"
        android:onClick="savePet" />
</LinearLayout>
