<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/veterinaryScheduleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Veterinary Appointment"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Calendar View -->
    <CalendarView
        android:layout_below="@id/veterinaryScheduleTitle"
        android:id="@+id/calendarViewVeterinary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true" />

    <!-- Veterinary List Layout -->
    <LinearLayout
        android:id="@+id/veterinaryListLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/calendarViewVeterinary"
    android:layout_marginTop="16dp" />

</LinearLayout>
